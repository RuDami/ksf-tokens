{
  "source": ["./tokens/dark/**/*.json"],
  "platforms": {
    "js": {
      "transformGroup": "js",
      "buildPath": "./js/",
      "files": [{
        "destination": "variables-dark.js",
        "format": "javascript/es6",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "./css/",
      "files": [{
        "destination": "variables-dark.css",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        }
      },{
        "destination": "variables-dark.scss",
        "format": "scss/variables",
        "options": {
          "outputReferences": true
        }
      }]
    }
  }
}